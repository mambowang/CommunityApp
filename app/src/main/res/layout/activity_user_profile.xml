                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="right"
                                    android:layout_marginRight="5dp"
                                    android:layout_marginTop="5dp"
                                    android:scaleType="fitXY"
                                    app:srcCompat="@drawable/posts_routes" />
                            </FrameLayout>
                        </LinearLayout>

                        <LinearLayout
